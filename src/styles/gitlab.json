{
    "name": "GitLab",
    "description": "Estilo similar al visor de Markdown de GitLab",
    "css": {
        "body": {
            "font-family": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Noto Sans', Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
            "font-size": "16px",
            "line-height": "1.6",
            "color": "#303030",
            "background-color": "#ffffff",
            "padding": "20px 40px",
            "max-width": "900px"
        },
        "h1": {
            "font-size": "2em",
            "font-weight": "600",
            "border-bottom": "1px solid #e5e5e5",
            "padding-bottom": "0.3em",
            "margin-top": "1.5em",
            "margin-bottom": "0.75em",
            "color": "#1f1f1f"
        },
        "h2": {
            "font-size": "1.5em",
            "font-weight": "600",
            "border-bottom": "1px solid #e5e5e5",
            "padding-bottom": "0.3em",
            "margin-top": "1.5em",
            "margin-bottom": "0.75em",
            "color": "#1f1f1f"
        },
        "h3": {
            "font-size": "1.25em",
            "font-weight": "600",
            "margin-top": "1.5em",
            "margin-bottom": "0.5em",
            "color": "#1f1f1f"
        },
        "h4": {
            "font-size": "1em",
            "font-weight": "600",
            "margin-top": "1.25em",
            "margin-bottom": "0.5em",
            "color": "#1f1f1f"
        },
        "p": {
            "margin-top": "0",
            "margin-bottom": "1em"
        },
        "a": {
            "color": "#1068bf",
            "text-decoration": "none"
        },
        "a:hover": {
            "color": "#0b5cad",
            "text-decoration": "underline"
        },
        "code": {
            "font-family": "'JetBrains Mono', 'Fira Code', 'Source Code Pro', Menlo, Consolas, 'Liberation Mono', monospace",
            "font-size": "0.9em",
            "background-color": "#f5f5f5",
            "padding": "0.2em 0.4em",
            "border-radius": "4px",
            "color": "#d14"
        },
        "pre": {
            "font-family": "'JetBrains Mono', 'Fira Code', 'Source Code Pro', Menlo, Consolas, 'Liberation Mono', monospace",
            "font-size": "0.9em",
            "background-color": "#f6f8fa",
            "border": "1px solid #e5e5e5",
            "border-radius": "6px",
            "padding": "16px",
            "overflow-x": "auto",
            "line-height": "1.45"
        },
        "pre code": {
            "background-color": "transparent",
            "padding": "0",
            "border-radius": "0",
            "color": "#303030"
        },
        "blockquote": {
            "margin": "1em 0",
            "padding": "0.5em 1em",
            "border-left": "4px solid #dbdbdb",
            "background-color": "#fafafa",
            "color": "#666666"
        },
        "ul, ol": {
            "margin-top": "0",
            "margin-bottom": "1em",
            "padding-left": "2em"
        },
        "li": {
            "margin-bottom": "0.25em"
        },
        "table": {
            "border-collapse": "collapse",
            "width": "100%",
            "margin-top": "1em",
            "margin-bottom": "1em"
        },
        "th": {
            "background-color": "#f6f8fa",
            "border": "1px solid #e5e5e5",
            "padding": "10px 12px",
            "text-align": "left",
            "font-weight": "600"
        },
        "td": {
            "border": "1px solid #e5e5e5",
            "padding": "10px 12px"
        },
        "tr:nth-child(even)": {
            "background-color": "#fafafa"
        },
        "hr": {
            "border": "none",
            "border-top": "1px solid #e5e5e5",
            "margin": "2em 0"
        },
        "img": {
            "max-width": "100%",
            "height": "auto"
        },
        "strong": {
            "font-weight": "600"
        }
    }
}
