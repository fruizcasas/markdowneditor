{
    "name": "Por defecto",
    "description": "Estilo limpio y profesional",
    "css": {
        "body": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "14px",
            "line-height": "1.6",
            "color": "#333333",
            "background-color": "#ffffff",
            "margin": "20px",
            "padding": "0"
        },
        "h1": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "28px",
            "font-weight": "600",
            "color": "#1a1a1a",
            "margin-top": "24px",
            "margin-bottom": "16px",
            "border-bottom": "2px solid #e0e0e0",
            "padding-bottom": "8px"
        },
        "h2": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "22px",
            "font-weight": "600",
            "color": "#2a2a2a",
            "margin-top": "20px",
            "margin-bottom": "12px",
            "border-bottom": "1px solid #e8e8e8",
            "padding-bottom": "6px"
        },
        "h3": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "18px",
            "font-weight": "600",
            "color": "#3a3a3a",
            "margin-top": "16px",
            "margin-bottom": "10px"
        },
        "p": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "14px",
            "color": "#333333",
            "margin-top": "0",
            "margin-bottom": "12px",
            "text-align": "left"
        },
        "ul": {
            "margin-top": "8px",
            "margin-bottom": "12px",
            "padding-left": "24px"
        },
        "ol": {
            "margin-top": "8px",
            "margin-bottom": "12px",
            "padding-left": "24px"
        },
        "li": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "14px",
            "color": "#333333",
            "margin-bottom": "4px"
        },
        "table": {
            "border-collapse": "collapse",
            "width": "100%",
            "margin-top": "12px",
            "margin-bottom": "16px"
        },
        "th": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "14px",
            "font-weight": "600",
            "color": "#ffffff",
            "background-color": "#4a5568",
            "border": "1px solid #cbd5e0",
            "padding": "10px 12px",
            "text-align": "left"
        },
        "td": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "14px",
            "color": "#333333",
            "border": "1px solid #e2e8f0",
            "padding": "8px 12px"
        },
        "code": {
            "font-family": "Consolas, Monaco, monospace",
            "font-size": "13px",
            "color": "#c7254e",
            "background-color": "#f9f2f4",
            "padding": "2px 6px",
            "border-radius": "3px"
        },
        "pre": {
            "font-family": "Consolas, Monaco, monospace",
            "font-size": "13px",
            "color": "#333333",
            "background-color": "#f5f5f5",
            "padding": "16px",
            "border-radius": "6px",
            "border": "1px solid #e0e0e0",
            "overflow-x": "auto"
        },
        "blockquote": {
            "font-family": "Segoe UI, Arial, sans-serif",
            "font-size": "14px",
            "font-style": "italic",
            "color": "#555555",
            "background-color": "#f8f9fa",
            "border-left": "4px solid #6c757d",
            "margin": "16px 0",
            "padding": "12px 20px"
        },
        "a": {
            "color": "#0066cc",
            "text-decoration": "underline"
        },
        "hr": {
            "border": "none",
            "border-top": "1px solid #e0e0e0",
            "margin": "24px 0"
        },
        "img": {
            "max-width": "100%",
            "height": "auto"
        },
        ".callout-note": {
            "background-color": "#e7f3ff",
            "border-left": "4px solid #0066cc",
            "padding": "12px 16px",
            "margin": "16px 0",
            "border-radius": "0 6px 6px 0"
        },
        ".callout-warning": {
            "background-color": "#fff8e6",
            "border-left": "4px solid #f0ad4e",
            "padding": "12px 16px",
            "margin": "16px 0",
            "border-radius": "0 6px 6px 0"
        },
        ".callout-important": {
            "background-color": "#ffeaea",
            "border-left": "4px solid #dc3545",
            "padding": "12px 16px",
            "margin": "16px 0",
            "border-radius": "0 6px 6px 0"
        }
    }
}
