{
    "name": "PDF Documento Formal",
    "description": "Elegante para documentos impresos o PDF",
    "css": {
        "body": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "12pt",
            "line-height": "1.7",
            "color": "#222222",
            "background-color": "#ffffff",
            "margin": "40px",
            "padding": "0"
        },
        "h1": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "26pt",
            "font-weight": "bold",
            "color": "#1a1a1a",
            "margin-top": "32px",
            "margin-bottom": "20px",
            "border-bottom": "3px solid #2c3e50",
            "padding-bottom": "12px"
        },
        "h2": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "20pt",
            "font-weight": "bold",
            "color": "#2c3e50",
            "margin-top": "28px",
            "margin-bottom": "16px",
            "border-bottom": "1px solid #bdc3c7",
            "padding-bottom": "8px"
        },
        "h3": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "16pt",
            "font-weight": "bold",
            "color": "#34495e",
            "margin-top": "22px",
            "margin-bottom": "12px"
        },
        "p": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "12pt",
            "color": "#222222",
            "margin-top": "0",
            "margin-bottom": "14px",
            "text-align": "justify"
        },
        "ul": {
            "margin-top": "10px",
            "margin-bottom": "14px",
            "padding-left": "28px"
        },
        "ol": {
            "margin-top": "10px",
            "margin-bottom": "14px",
            "padding-left": "28px"
        },
        "li": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "12pt",
            "color": "#222222",
            "margin-bottom": "6px"
        },
        "table": {
            "border-collapse": "collapse",
            "width": "100%",
            "margin-top": "16px",
            "margin-bottom": "20px"
        },
        "th": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "11pt",
            "font-weight": "bold",
            "color": "#ffffff",
            "background-color": "#2c3e50",
            "border": "1px solid #2c3e50",
            "padding": "12px 14px",
            "text-align": "left"
        },
        "td": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "11pt",
            "color": "#222222",
            "border": "1px solid #bdc3c7",
            "padding": "10px 14px"
        },
        "code": {
            "font-family": "Consolas, Monaco, monospace",
            "font-size": "10pt",
            "color": "#8e44ad",
            "background-color": "#f8f8f8",
            "padding": "3px 8px",
            "border-radius": "4px"
        },
        "pre": {
            "font-family": "Consolas, Monaco, monospace",
            "font-size": "10pt",
            "color": "#2c3e50",
            "background-color": "#f8f8f8",
            "padding": "20px",
            "border-radius": "8px",
            "border": "1px solid #e0e0e0",
            "overflow-x": "auto"
        },
        "blockquote": {
            "font-family": "Georgia, Times New Roman, serif",
            "font-size": "12pt",
            "font-style": "italic",
            "color": "#555555",
            "background-color": "#fafafa",
            "border-left": "5px solid #2c3e50",
            "margin": "20px 0",
            "padding": "16px 24px"
        },
        "a": {
            "color": "#2980b9",
            "text-decoration": "underline"
        },
        "hr": {
            "border": "none",
            "border-top": "2px solid #bdc3c7",
            "margin": "32px 0"
        },
        "img": {
            "max-width": "100%",
            "height": "auto"
        },
        ".callout-note": {
            "background-color": "#ebf5fb",
            "border-left": "5px solid #3498db",
            "padding": "16px 20px",
            "margin": "20px 0",
            "border-radius": "0 8px 8px 0"
        },
        ".callout-warning": {
            "background-color": "#fef9e7",
            "border-left": "5px solid #f39c12",
            "padding": "16px 20px",
            "margin": "20px 0",
            "border-radius": "0 8px 8px 0"
        },
        ".callout-important": {
            "background-color": "#fdedec",
            "border-left": "5px solid #e74c3c",
            "padding": "16px 20px",
            "margin": "20px 0",
            "border-radius": "0 8px 8px 0"
        }
    }
}
