{
    "name": "Outlook Email",
    "description": "Optimizado para correos en Outlook - fuentes seguras, sin florituras",
    "css": {
        "body": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "11pt",
            "line-height": "1.5",
            "color": "#000000",
            "background-color": "#ffffff",
            "margin": "0",
            "padding": "0"
        },
        "h1": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "18pt",
            "font-weight": "bold",
            "color": "#1f4e79",
            "margin-top": "18px",
            "margin-bottom": "12px",
            "border-bottom": "none",
            "padding-bottom": "0"
        },
        "h2": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "14pt",
            "font-weight": "bold",
            "color": "#2e75b6",
            "margin-top": "14px",
            "margin-bottom": "8px",
            "border-bottom": "none",
            "padding-bottom": "0"
        },
        "h3": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "12pt",
            "font-weight": "bold",
            "color": "#404040",
            "margin-top": "12px",
            "margin-bottom": "6px"
        },
        "p": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "11pt",
            "color": "#000000",
            "margin-top": "0",
            "margin-bottom": "10px",
            "text-align": "left"
        },
        "ul": {
            "margin-top": "6px",
            "margin-bottom": "10px",
            "padding-left": "20px"
        },
        "ol": {
            "margin-top": "6px",
            "margin-bottom": "10px",
            "padding-left": "20px"
        },
        "li": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "11pt",
            "color": "#000000",
            "margin-bottom": "3px"
        },
        "table": {
            "border-collapse": "collapse",
            "width": "auto",
            "margin-top": "10px",
            "margin-bottom": "14px"
        },
        "th": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "11pt",
            "font-weight": "bold",
            "color": "#ffffff",
            "background-color": "#5b9bd5",
            "border": "1px solid #9cc2e5",
            "padding": "6px 10px",
            "text-align": "left"
        },
        "td": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "11pt",
            "color": "#000000",
            "border": "1px solid #bfbfbf",
            "padding": "5px 10px"
        },
        "code": {
            "font-family": "Consolas, Courier New, monospace",
            "font-size": "10pt",
            "color": "#c7254e",
            "background-color": "#f5f5f5",
            "padding": "1px 4px",
            "border-radius": "0"
        },
        "pre": {
            "font-family": "Consolas, Courier New, monospace",
            "font-size": "10pt",
            "color": "#333333",
            "background-color": "#f5f5f5",
            "padding": "10px",
            "border-radius": "0",
            "border": "1px solid #cccccc",
            "overflow-x": "auto"
        },
        "blockquote": {
            "font-family": "Calibri, Arial, sans-serif",
            "font-size": "11pt",
            "font-style": "italic",
            "color": "#666666",
            "background-color": "#f9f9f9",
            "border-left": "3px solid #5b9bd5",
            "margin": "10px 0",
            "padding": "8px 14px"
        },
        "a": {
            "color": "#0563c1",
            "text-decoration": "underline"
        },
        "hr": {
            "border": "none",
            "border-top": "1px solid #cccccc",
            "margin": "16px 0"
        },
        "img": {
            "max-width": "100%",
            "height": "auto"
        },
        ".callout-note": {
            "background-color": "#deeaf6",
            "border-left": "3px solid #5b9bd5",
            "padding": "8px 12px",
            "margin": "10px 0",
            "border-radius": "0"
        },
        ".callout-warning": {
            "background-color": "#fff2cc",
            "border-left": "3px solid #bf9000",
            "padding": "8px 12px",
            "margin": "10px 0",
            "border-radius": "0"
        },
        ".callout-important": {
            "background-color": "#fce4d6",
            "border-left": "3px solid #c65911",
            "padding": "8px 12px",
            "margin": "10px 0",
            "border-radius": "0"
        }
    }
}
